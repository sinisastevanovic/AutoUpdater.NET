<Window x:Class="VireedPatcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VireedPatcher"
        mc:Ignorable="d"
        Title="MainWindow" Width="840" Height="700" AllowsTransparency="True" Background="Transparent" WindowStyle="None"
        WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" Closing="Window_Closing">

    <Border Background="#FF3A4145" CornerRadius="30" >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="81"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Background="#19FFFFFF" CornerRadius="30,30,0,0">
                <TextBlock Text="UPDATE WIRD INSTALLIERT" HorizontalAlignment="Center" Foreground="#FFFFFFFF" FontWeight="Medium" FontSize="24" VerticalAlignment="Center" />
            </Border>

            <StackPanel Grid.Row="1" Margin="126,0">
                <ProgressBar x:Name="MyProgressBar" Height="9" Margin="0,273,0,0"/>
                <TextBlock x:Name="MyPercentText" Text="0 %" TextAlignment="Center" Margin="0,24,0,0" Foreground="#FFFFFFFF" FontWeight="Light" FontSize="16"/>
            </StackPanel>
        </Grid>
    </Border>
   
</Window>
